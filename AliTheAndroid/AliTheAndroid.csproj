    <None Update="Fonts\AliTheAndroid.font" CopyToOutputDirectory="PreserveNewest" />
    <None Update="Fonts\AliTheAndroid_32x32.png" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
